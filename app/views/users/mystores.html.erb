<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
          <% binding.pry %>
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">コメント  <span class="badge badge-secondary"><%= @count_sales %></span></a></li>
      <li class="nav-item"><a href="<%= mystores_user_patch(@user) %>" class="nav-link <%= 'active' if current_page?(mystores_user_path(@user)) %>">登録店舗  <span class="badge badge-secondary"><%= @count_stores %></span></a></li>
      
    </ul>
    <%= render 'stores/stores', users: @stores %>
    
  </div>
</div>