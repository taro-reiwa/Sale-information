<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
    <ul class="list-unstyled">
    <% @stores.each do |store| %>
      <li class="media">
        <div class="media-body">
          <div>
            <%= store.name %>
          </div>
          <div>
            <p><%= link_to 'View store', store_path(store) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @stores %>
  
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'login now!', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  <ul class="list-unstyled">
    <% @stores.each do |store| %>
      <li class="media">
        <div class="media-body">
          <div>
            <%= store.name %>
          </div>
          <div>
            
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @stores %>
  </div>
<% end %>